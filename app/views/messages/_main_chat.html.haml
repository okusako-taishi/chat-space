.chat-main
  .chat-main__header
    .group__info
      .group__name
        = @group.name
      %ul.member__list
        Member :
        %li.member__list__name
          - @group.users.each do |user|
            = user.name
    .group__edit
      = link_to edit_group_path(@group), class: "group__edit__btn" do
        Edit
  .chat-main__contents
    = render @messages

  .chat-main__footer
    = form_for [@group, @message] do |f|
      .chat-main__footer__post
        = f.text_field :content, class: 'chat-main__footer__post__text', placeholder: 'type a message'
        = f.label :image, class: 'chat-main__footer__post__image' do
          %i.far.fa-image
          = f.file_field :image, class: 'chat-main__footer__post__image__file'
      = f.submit 'Send', class: 'chat-main__footer__send' 